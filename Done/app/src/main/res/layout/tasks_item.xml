<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_task_completed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/mainBlueColor"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/list_item_task_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_task_completed_check_box"
        android:padding="4dp"
        android:textSize= "20sp"
        android:textColor="@color/textColor"
        tools:text="Task Title"
        android:layout_marginRight="60dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/list_item_task_created_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_task_completed_check_box"
        android:padding="4dp"
        tools:text="Task Due Date"
        android:layout_marginTop="60dp"/>

    <Button android:id="@+id/delete_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:drawableRight="@drawable/ic_delete"
            android:drawableEnd="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    <Button android:id="@+id/edit_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:layout_below="@id/delete_task_button"
            android:drawableRight="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBlueColor"
        android:layout_below="@id/edit_task_button"/>

</RelativeLayout>