<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_task_completed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/mainBlueColor"
        android:layout_alignParentLeft="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_task_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_task_completed_check_box"
        android:padding="4dp"
        android:textSize= "15sp"
        android:textColor="@color/textColor"
        tools:text="Task Title"/>

    <TextView
        android:id="@+id/list_item_task_created_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_task_completed_check_box"
        android:layout_below="@id/list_item_task_title_text_view"
        android:padding="4dp"
        tools:text="Task Due Date"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBlueColor"
        android:layout_below="@id/list_item_task_created_date_text_view"/>

</RelativeLayout>