<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|left"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bignerdranch.android.done.ViewListActivity"
    tools:showIn="@layout/activity_view_list"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of User"
        android:id="@+id/textView"
        android:layout_weight="0.05"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu Area"
        android:id="@+id/textView2"
        android:layout_weight="0.05"/>

    <Button
        android:id="@+id/wish_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wish_list_button"/>

    <Button
        android:id="@+id/award_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/award_list_button"/>

    <Button
        android:id="@+id/create_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_list_button"/>

</LinearLayout>
